{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "es2020",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@shared/*": [
        "./libs/shared/*"
      ],
      "@sandbox/*": [
        "./libs/sandbox/*"
      ]
    },
    "declaration": false,
    "importHelpers": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ],
  "compileOnSave": false
}
