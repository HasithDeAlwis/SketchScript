{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": [
      "vite/client",
      "vitest",
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "module": "ESNext",
    "paths": {
      "@shared/*": [
        "../../libs/shared/*"
      ],
      "@sandbox/*": [
        "../../libs/sandbox/*"
      ]
    },
  },
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "files": [],
  "include": [],
  "extends": "../../tsconfig.base.json"
}