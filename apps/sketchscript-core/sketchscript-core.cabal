category: Language
build-type: Simple
extra-doc-files: CHANGELOG.md

-- extra-source-files:
common warnings
  ghc-options: -Wall

library
  import: warnings
  exposed-modules: Main
  other-modules:
    Parser.Common
    Parser.Element
    Parser.Style
    Parser.Widget
    SketchScriptTypes
    Types

  -- other-modules:
  -- other-extensions:
  build-depends:
    base ^>=4.18.3.0,
    megaparsec,
    text,

  hs-source-dirs: src
  default-language: Haskell2010

test-suite sketchscript-core-test
  import: warnings
  default-language: Haskell2010
  -- other-modules:
  -- other-extensions:
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  main-is: Main.hs
  build-depends:
    base ^>=4.18.3.0,
    sketchscript-core,
